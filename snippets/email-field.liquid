<div class="field">
    <input
      type="email"
      name="customer[email]"
      id="CustomerEmail"
      autocomplete="email"
      autocorrect="off"
      autocapitalize="off"
      {% if form.errors contains 'form' %}
        aria-invalid="true"
      {% endif %}
      placeholder="{{ 'customer.login_page.email' | t }}"
    >
  </div>